<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context="dji.sampleV5.modulecommon.DJIMainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left_side"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/view_base_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_bg"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:srcCompat="@drawable/rinao_logo"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/right_side"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_side"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/view_base_info2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_white_bg"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/showcase"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/default_layout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:foreground="?selectableItemBackground"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/white"
                android:enabled="false"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/default_layout"
                android:textColor="@color/selector_enable_button" />

            <Button
                android:id="@+id/widget_list_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:foreground="?selectableItemBackground"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/white"
                android:enabled="false"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/widget_list"
                android:textColor="@color/selector_enable_button" />

            <Button
                android:id="@+id/testing_tool_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:foreground="?selectableItemBackground"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/white"
                android:enabled="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/testing_tools"
                android:textColor="@color/selector_enable_button" />

            <Button
                android:id="@+id/reconnect_ws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:foreground="?selectableItemBackground"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/white"
                android:enabled="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/ws_reconnect"
                android:textColor="@color/selector_enable_button" />

            <Button
                android:id="@+id/live_stream_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:enabled="true"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/livestream_shortcut"
                android:textColor="@color/selector_enable_button" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

